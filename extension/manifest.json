{
	"manifest_version": 2,

	"name": "Ellen's Cat",
	"description": "a small friend for your browser",
	"version": "1.0",
	"author": "Ellen's Santa",

	"background": {
		"scripts": ["script.js"],
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/",
        "storage"
    ],
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "body.html"
	}
}
